        TextView myTextView = (TextView)findViewById(R.id.myTextView);
        Button myButton = (Button)findViewById(R.id.mybutton);
        myTextView.setText("xuejinghao");
        myButton.setText(" ‰»Î");
        
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
