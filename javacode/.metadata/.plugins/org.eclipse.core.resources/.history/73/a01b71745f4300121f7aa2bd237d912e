	    sleep((long) 2000.0);
	    UiObject AppsView = new UiObject(new UiSelector()
        .text("图库"));
	    AppsView.clickAndWaitForNewWindow();
	}
}
	
public static void main(String args[]){ 

        junit.textui.TestRunner.run(test .class);    }




