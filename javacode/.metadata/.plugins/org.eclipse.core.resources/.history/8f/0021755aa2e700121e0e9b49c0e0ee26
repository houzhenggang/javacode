  		sleep((long) 10000.0);
  		if(i%2 != 0)
  		{
    	  	String logcat;
			File logcatFile=new File("/sdcard/Airplane/open"+(i+1)/2+".txt");
			logcatFile.createNewFile();
			FileOutputStream outputLogcat=new FileOutputStream(logcatFile);
			Process getLogcat = Runtime.getRuntime().exec("logcat -b radio -t 1000");
			DataInputStream inputLogcat = new DataInputStream(getLogcat.getInputStream());
			while ((logcat = inputLogcat.readLine()) != null){
				outputLogcat.write(logcat.getBytes());				
			}
			BufferedReader bufferedReader = new BufferedReader(new FileReader(logcatFile));  
            String lineTXT ;
            lineTXT = bufferedReader.readLine();
            String log = lineTXT.toString().trim();
            int result=log.indexOf("RADIO_POWER off");
            if(result != -1)
            {
		    	System.out.println("Open Airplane successfully------->"+(i+1)/2);				    	
		    }
		    else
		    {
		    	System.out.println("Open Airplane fail------->"+(i+1)/2);
		    	String failnote = "Open Airplane fail_"+(i+1)/2;
  				SimpleDateFormat date1 = new SimpleDateFormat("yyyyMMddHH:mm:ss");
  				fo.write((date1.format(new Date())+"  \n"+failnote+"  \n").getBytes());
  				GetLog getlog =new GetLog();
				getlog.getModemLog();
				sleep((long) 2000.0);
				getlog.getBugreportLog();
				sleep((long) 20000.0);
		    }
  		}
      else
      {
    	  String logcat;
			File logcatFile=new File("/sdcard/Airplane/close"+i/2+".txt");
			logcatFile.createNewFile();
			FileOutputStream outputLogcat=new FileOutputStream(logcatFile);
			Process getLogcat = Runtime.getRuntime().exec("logcat -b radio -t 1000");
			DataInputStream inputLogcat = new DataInputStream(getLogcat.getInputStream());
			while ((logcat = inputLogcat.readLine()) != null){
				outputLogcat.write(logcat.getBytes());				
			}
			BufferedReader bufferedReader = new BufferedReader(new FileReader(logcatFile));  
          String lineTXT ;
          lineTXT = bufferedReader.readLine();
          String log = lineTXT.toString().trim();
          int result=log.indexOf("RADIO_POWER on");
          if(result != -1)
          {
		    	sleep((long) 10000.0);
		    	int result1 = -1;
		    	while(result1 == -1){
		    	Process getLogcat1 = Runtime.getRuntime().exec("dumpsys telephony.registry");
		    	DataInputStream inputLogcat1 = new DataInputStream(getLogcat1.getInputStream());
				while ((logcat = inputLogcat1.readLine()) != null){
					outputLogcat.write(logcat.getBytes());				
				}
				BufferedReader bufferedReader1 = new BufferedReader(new FileReader(logcatFile));  
	          String lineTXT1 ;
	          lineTXT1 = bufferedReader1.readLine();
	          String log1 = lineTXT1.toString().trim();
	          result1=log1.indexOf("China");
	          sleep((long) 5000.0);
	          continue;
		    }
	    	UiObject airPlane1App = new UiObject(new UiSelector()
	         .text("取消"));
	    	airPlane1App.waitForExists((long) 20000.0);
	    	if(airPlane1App.exists())
	    	{
	    		airPlane1App.click();	    		
	    	}
	    	sleep((long) 5000.0);
		    	
		    	
		  }
		  else
		  {
	    	System.out.println("Close Airplane fail------->"+i/2);
	    	String failnote = "Close Airplane fail_"+i/2;
	    	sleep((long) 10000.0);
	    	GetLog getlog =new GetLog();
			getlog.getModemLog();
			sleep((long) 2000.0);
			getlog.getBugreportLog();
